<html lang="en" xmlns="http://www.w3.org/1999/html">
<body>
<section class="container">
  <div class="login">
    <h1>Sign Up</h1>
    <%= stylesheet_link_tag "login_stylesheet" %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <form method="post" action="/users">
          <p>
            <%= f.email_field :email, autofocus: true, placeholder: "Email", :type => "text" %>
          </p>

          <p>
            <% if @minimum_password_length %>
                <%= f.password_field :password, autocomplete: "off",
                                     placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
            <% end %><br/>
          </p>

          <p>
            <%= f.password_field :password_confirmation, autocomplete: "off",
                                 placeholder: "Confirm Password" %>
          </p>

          <p>
            <%= f.text_field :name, placeholder: "Full Name" %>
          </p>

          <p></p>
          <%= f.submit "Sign up", class: "btn btn-success" %>
          <div class="pull-right">
            <button type="reset" value="Reset" class="btn btn-danger" class="pull-right">Reset</button>
          </div>


    <% end -%>
    </form>

  </div>


</section>

</body>
</html>
