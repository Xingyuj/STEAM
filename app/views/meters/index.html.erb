<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h1>Listing Meters</h1>
    </div>
  </div>
</div>



<table>
  <thead>
    <tr>
      <th>Serial</th>
      <th>Nmi</th>
      <th>Billing Site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meters.each do |meter| %>
      <tr>
        <td><%= meter.serial %></td>
        <td><%= meter.nmi %></td>
        <td><%= meter.billing_site_id %></td>
        <td><%= link_to 'Show', meter %></td>
        <td><%= link_to 'Edit', edit_meter_path(meter) %></td>
        <td><%= link_to 'Destroy', meter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

